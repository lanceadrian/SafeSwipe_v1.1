<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changeCameraSettingsButton"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:text="In here, you can change the direction of swipe the application will activate to"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="42dp"
        android:id="@+id/textViewswipe"
        android:textAlignment="center"
        android:layout_below="@+id/changeCameraSettingsButton"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGrpChangeCamera"
        android:layout_above="@+id/changeCameraSettingsButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp">

        <RadioButton
            android:text="Front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:id="@+id/radioButton7" />

        <RadioButton
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButton7"
            android:layout_alignLeft="@+id/radioButton7"
            android:layout_alignStart="@+id/radioButton7"
            android:id="@+id/radioButton8" />

    </RadioGroup>

    <TextView
        android:text="Change Camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_above="@+id/radioGrpChangeCamera"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp" />
</RelativeLayout>